<div class="col s12 m6">
  <div class="card hoverable sticky-action">
    <div class="card-image waves-effect waves-light">
      <%= image_tag("chalk.jpg", class:"activator") %>
    </div>
    <div class="card-content">
      <h3 class="card-title activator">
        <i class= "material-icons left blue-text lighten-2">grid_on</i>
          <% if research_pod.title.blank? %>
            Research Pod:
          <% else %>
            <%= truncate(research_pod.title)%>
          <%end%>
        <i class="material-icons right">more_vert</i> </h3>
    </div>
    <div class="card-action">
      <%= link_to "edit", edit_essay_research_pod_path(@essay, research_pod),
                          :class => "blue-text lighten-3", :target => "_blank"%>
      <%= link_to "destroy", essay_research_pod_path(@essay, research_pod), method: :delete,
                             data: {confirm: "Are you sure you want to delete this research pod?"},
                             :class => "blue-text lighten-3"%>
    </div>
    <div class="card-reveal">
      <h3 class="card-title activator">
        <% if research_pod.title.blank? %>
          Research Pod:
        <% else %>
          <%= research_pod.title %>
        <%end%>
        <i class="material-icons right">close</i>
      </h3>
      <p><%= markdown(research_pod.body) %></p>
      <br><br><br>
    </div>

  </div>
</div>
